<%= form_for(@company) do |form| %>
  <% if company.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(company.errors.count, "error") %> prohibited this company from being saved:</h2>

      <ul>
      <% company.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name, "Company Name" %>
    <%= form.text_field :name %>
  </div>

  <%= form.fields_for :director do |form_director| %>
    <div class="field">
      <%= form_director.label :name, "Director Name" %>
      <%= form_director.text_field :name %>
    </div>

    <% if form_director.object.persisted? %>
      <%= form_director.hidden_field :id %>
      <div class="field">
        <%= form_director.label :_destroy, "Destroy" %>
        <%= form_director.radio_button :_destroy, true, checked: false %>
      </div>
    <% end %>
  <% end %>

  <%= form.fields_for :products do |form_product| %>
    <div class="field">
      <%= form_product.label :name, "Product Name" %>
      <%= form_product.text_field :name %>
    </div>

    <% if form_product.object.persisted? %>
      <%= form_product.hidden_field :id %>
      <div class="field">
        <%= form_product.label :_destroy, "Destroy" %>
        <%= form_product.radio_button :_destroy, true, checked: false %>
      </div>
    <% end %>
<% end %>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
