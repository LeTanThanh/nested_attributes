<div class="container">
  <h1>Company</h1>

  <table class="table">
    <thead>
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Director</th>
        <th>Products</th>
      </tr>
    </thead>

    <tbody>
      <tr>
        <td><%= @company.id %></td>
        <td><%= @company.name %></td>
        <td><%= @company.director&.name %></td>
        <td><%= @company.products.first&.name %></td>
      </tr>

      <% @company.products.drop(1).each do |product| %>
        <tr>
          <td></td>
          <td></td>
          <td></td>
          <td><%= product.name %></td>
        </tr>
      <% end %>
    </tbody>

  </table>

  <%= link_to "Companies", companies_path, class: "btn btn-link" %> |
  <%= link_to "New Company", new_company_path, class: "btn btn-link" %> |
  <%= link_to "Edit", edit_company_path(@company), class: "btn btn-link" %>
</div>
